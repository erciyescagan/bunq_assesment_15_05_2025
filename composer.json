{
    "name": "erciyes/chat-app",
    "description": "A scalable and testable chat API using Slim and SQLite",
    "type": "project",
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.7",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1",
        "guzzlehttp/psr7": "^2",
        "laminas/laminas-diactoros": "^3.6",
        "merterciyescagan/framework": "^1.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
      "phpunit/phpunit": "^10.5",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
      "psr-4": {
        "App\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Tests\\": "tests/"
      }
    },
    "scripts": {
      "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
  }
